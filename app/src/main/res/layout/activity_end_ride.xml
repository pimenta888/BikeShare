<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="center"
            android:text="@string/text_last_added" />

        <EditText
            android:id="@+id/end_last_ride"
            android:layout_width="250dp"
            android:paddingTop="30dp"
            android:layout_height="70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="center"
            android:text="@string/text_what_bike" />

        <EditText
            android:id="@+id/end_what_text"
            android:layout_width="250dp"
            android:paddingTop="30dp"
            android:layout_height="70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="center"
            android:text="@string/text_where_to" />

        <EditText
            android:id="@+id/end_where_text"
            android:layout_width="250dp"
            android:paddingTop="30dp"
            android:layout_height="70dp" />
    </LinearLayout>

    <Button
        android:id="@+id/end_button"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/holo_red_light"
        android:text="@string/button_end_ride"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</LinearLayout>